<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="hf_no_number"
    tools:context=".Main">

    <Button
        android:id="@+id/startApp"
        android:layout_width="132dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="360dp"
        android:layout_marginEnd="362dp"
        android:layout_marginBottom="18dp"
        android:text="Start"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/startApp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="20dp"
        android:fadingEdge="horizontal|vertical"
        android:scaleType="fitXY"
        android:tintMode="src_over"
        app:srcCompat="@drawable/siemensgamesasg80167ddstage"
        app:tint="#77502C2C" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="263dp"
        android:layout_marginTop="154dp"
        android:layout_marginEnd="276dp"
        android:text="ZCH-Checklist"
        android:textColor="#FFFFFF"
        android:textSize="48sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="254dp"
        android:layout_height="209dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="600dp"
        android:layout_marginBottom="271dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/zch_checklist_logos_white" />

    <Button
        android:id="@+id/bitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="33dp"
        android:text="send" />

    <!--<com.realwear.voicecontrol.VoiceControlButton
        android:id="@+id/item_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item 1"
        app:voiceCommand="select item 1" />-->
</RelativeLayout>
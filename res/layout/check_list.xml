<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="99dp"
        android:layout_height="57dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="549dp"
        android:layout_marginBottom="351dp"
        android:max="100"
        android:progress="100"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="#3C4CAF50"/>

    <TextView
        android:id="@+id/bubble"
        android:layout_width="81dp"
        android:layout_height="71dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="635dp"
        android:layout_marginBottom="347dp"
        android:background="@drawable/bubble_bg"
        android:padding="8dp"
        android:text="1"
        android:textColor="#3C4CAF50"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/bubbleTransp"
        android:layout_width="100dp"
        android:layout_height="88dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="624dp"
        android:layout_marginBottom="339dp"
        android:background="@drawable/bubble_transp"
        android:padding="8dp"
        android:text="1"
        android:textColor="#664CAF50"
        android:textSize="16sp" />
</RelativeLayout>